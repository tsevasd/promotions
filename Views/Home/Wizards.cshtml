<style>
    .play {
        background-color: #17154c;
        height: 800px;
        overflow: hidden;
        position: relative;
        width: 100%;
    }

    .play img {
        max-width: none
    }

    .main {
        background: url(@(imgUrl)/bg.jpg@(cb)) center center no-repeat;
        background-size: cover;
        height: 800px;
        left: 50%;
        margin-left: -960px;
        position: absolute;
        width: 1920px;
        z-index: 1;
    }

    .logo {
        animation: none;
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 10px;
        transition: all .5s;
        z-index: 9;
    }

    .loading-me .logo {
        animation: pulseIt .3s infinite;
        top: 32.5%;
    }

    .load-me {
        background-color: #17154c;
        bottom: 0;
        height: 100%;
        left: 0;
        opacity: 0;
        position: absolute;
        right: 0;
        top: 0;
        transition: all .5s;
        visibility: hidden;
        width: 100%;
        z-index: 7;
    }

    .loading-me .load-me {
        opacity: 1;
        visibility: visible;
    }

    .fetch {
        pointer-events: none;
    }

    .fetch.fetched {
        pointer-events: all;
    }

    @@keyframes pulseIt {
        0% {
            opacity: 1;
        }

        50% {
            opacity: .6;
        }

        100% {
            opacity: 1;
        }
    }

    .bg-fire {
        opacity: .2;
        animation: reflect .5s ease infinite;
        background: url(@(imgUrl)/bg_light.jpg@(cb)) center center no-repeat;
        background-size: cover;
        height: 800px;
        left: 0;
        position: absolute;
        right: 0;
        width: 100%;
        z-index: 1;
    }

    @@keyframes reflect {
        0% {
            opacity: 0;
        }

        10% {
            opacity: .3;
        }

        20% {
            opacity: 0;
        }

        36% {
            opacity: .2;
        }

        52% {
            opacity: 0;
        }

        75% {
            opacity: .16;
        }

        100% {
            opacity: 0;
        }
    }

    .lamp {
        animation: swing 4s ease-in-out infinite;
        left: 220px;
        position: absolute;
        top: 158px;
        z-index: 2;
    }

    .lamp .img {
        animation: light 1s ease infinite;
    }

    @@keyframes swing {
        0% {
            transform: rotate(4deg) translateX(-4px);
        }

        50% {
            transform: rotate(-4deg) translateX(4px);
        }

        100% {
            transform: rotate(4deg) translateX(-4px);
        }
    }

    @@keyframes light {
        0% {
            opacity: 1;
        }

        20% {
            opacity: .7;
        }

        50% {
            opacity: .9;
        }

        70% {
            opacity: .75;
        }

        100% {
            opacity: 1;
        }
    }

    .option {
        background: transparent;
        border: none;
        cursor: pointer;
        position: absolute;
        top: 180px;
        transition: all .5s;
        left: 50%;
        z-index: 3;
    }

    .pop {
        opacity: .3;
        position: relative;
        transition: all .5s;
        z-index: 1;
    }

    .symbol {
        left: 0;
        position: absolute;
        top: 0;
        transition: all .5s;
        z-index: 2;
    }

    .option-1 {
        margin-left: -500px;
    }

    .option-2 {
        margin-left: -140px;
    }

    .option-3 {
        margin-left: 210px;
    }

    .option:hover .pop {
        opacity: 1
    }

    .option.active .pop {
        animation: pulseIt .3s infinite;
        opacity: 1;
    }

    .option.active .symbol {
        filter: contrast(50%) grayscale(50%) brightness(2)
    }

    .option.active {
        transform: scale(.9);
    }

    .fetch .option:not(.active) {
        opacity: .25
    }

    .fetch.fetched .option {
        animation: none;
        opacity: 0 !important;
    }

    .fetch.fetched .option.active .symbol {
        filter: contrast(50%) grayscale(50%) brightness(2) blur(40px);
        transform: scale(.5, 5);
    }

    .text {
        bottom: 0;
        color: #eee;
        font-size: 14px;
        left: 0;
        padding: 13px;
        position: absolute;
        text-align: center;
        transition: opacity .5s;
        width: 100%;
        z-index: 3;
    }

    .text .high {
        font-size: 44px;
        margin-bottom: 3px;
        opacity: .7;
    }

    .text a {
        color: #fff;
        text-decoration: underline;
    }

    .fetch .text {
        opacity: 0
    }

    .winning {
        background-color: rgb(23 21 76 / .75);
        align-items: center;
        bottom: auto;
        display: flex;
        height: 1px;
        justify-content: center;
        left: 0;
        opacity: .01;
        overflow: hidden;
        position: absolute;
        right: 0;
        transition: opacity .5s ease .4s;
        width: 100%;
        z-index: 8;
    }

    .fetch.fetched .winning {
        bottom: 0;
        height: 100%;
        opacity: 1;
    }

    .winning .table {
        background: url(@(imgUrl)/win.png@(cb)) center center no-repeat;
        background-size: contain;
        height: 600px;
        padding: 100px 50px 0;
        text-align: center;
        transform: scale(.75);
        transition: all .5s ease .4s;
        width: 600px;
    }

    .fetch.fetched .winning .table {
        transform: scale(1)
    }

    .fetch.fetched .lamp,
    .fetch.fetched .lamp .img {
        animation: none
    }

    .fetch.fetched .fire .particle {
        animation: none !important
