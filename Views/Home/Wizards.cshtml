    .smoke-wrap {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        top: 0;
    }

    .smoke,
    .smoke2,
    .smoke3 {
        filter: blur(5px);
        transform-origin: 50% 50%;
    }

    .smoke {
        animation: smoke1 1.5s linear infinite;
        animation-delay: 0.5s;
    }

    .smoke2 {
        animation: smoke2 1.5s linear infinite;
        animation-delay: 1.5s;
    }

    .smoke3 {
        width: 200px;
        animation: smoke3 2s linear infinite;
        animation-delay: 2.5s;
    }

    @@keyframes smoke1 {
