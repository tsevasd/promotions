@{
    const string imgUrl = "/img/prizes/spinshotshalloweeen";
    const string cb = "?cb=4";
    //string drawUrl = Url.RouteUrl("SpinShotsApp_Play_Draw");
}
<style>
    .play {
        background-color: #0a1830;
        height: 800px;
        overflow: hidden;
        position: relative;
        width: 100%;
    }

    .betshop {
        left: 50%;
        margin-left: -96px;
        opacity: 0;
        position: absolute;
        top: 32px;
        transition: all 1s ease .5s;
        z-index: 9;
    }

    .logo {
        top: 360px;
        left: 50%;
        margin-left: -368px;
        position: absolute;
        transition: all 1s ease 0s;
        z-index: 9;
    }

    .logo-1 {
        opacity: .6;
        transform: scale(1);
        --transform-scale: scale(1);
        transition: all 1s ease .1s;
        z-index: 8;
    }

    .logo-2 {
        opacity: .5;
        transform: scale(.8);
        --transform-scale: scale(.8);
        transition: all 1s ease .2s;
        filter: blur(1px);
        z-index: 8;
    }

    .logo-3 {
        opacity: .4;
        transform: scale(.6);
        --transform-scale: scale(.6);
        transition: all 1s ease .3s;
        filter: blur(2px);
        z-index: 8;
    }

    .logo-4 {
        opacity: .3;
        transform: scale(.4);
        --transform-scale: scale(.4);
        transition: all 1s ease .4s;
        filter: blur(4px);
        z-index: 8;
    }

    .rot.logo-1 {
        animation: rotc 1.25s linear infinite;
    }

    .rot.logo-2 {
        animation: rotcc 2s linear infinite;
    }

    .rot.logo-3 {
        animation: rotc 3s linear infinite;
    }

    .rot.logo-4 {
        animation: rotcc 4s linear infinite;
    }

    .loaded .rot.logo-4 {
        animation-duration: 2s;
    }

    .loaded .logo {
        top: 90px;
    }

    .loaded .logo-1,
    .loaded .logo-2,
    .loaded .logo-3,
    .loaded .logo-4 {
        top: 90px;
        opacity: 0;
    }

    @@keyframes rotc {
        0% {
            transform: var(--transform-scale) rotate(0deg);
        }

        25% {
            transform: var(--transform-scale) rotate(30deg);
        }

        50% {
            transform: var(--transform-scale) rotate(0deg);
        }

        75% {
            transform: var(--transform-scale) rotate(-30deg);
        }

        100% {
            transform: var(--transform-scale) rotate(0deg);
        }
    }

    @@keyframes rotcc {
        0% {
            transform: var(--transform-scale) rotate(0deg);
        }

        25% {
            transform: var(--transform-scale) rotate(-30deg);
        }

        50% {
            transform: var(--transform-scale) rotate(0deg);
        }

        75% {
            transform: var(--transform-scale) rotate(30deg);
        }

        100% {
            transform: var(--transform-scale) rotate(0deg);
        }
    }

    .loaded .betshop {
        opacity: 1
    }

    .bg {
        display: block;
        filter: blur(80px);
        left: 50%;
        max-width: none;
        opacity: 0;
        position: absolute;
        top: -130px;
        transform: translateX(-50%);
        transition: opacity 3.2s ease, filter 3.2s ease;
        z-index: 1;
    }

    .loaded .bg {
        filter: blur(0);
        opacity: 1;
    }

    .g-container {
        bottom: 0;
        height: 100%;
        ;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        width: 100%;
        ;
        z-index: 4;
    }

    .glasses {
        display: flex;
        height: 520px;
        justify-content: space-between;
        margin: 200px auto 0;
        position: relative;
        max-width: 1300px;
        z-index: 4;
    }

    .glass {
        border-radius: 100%;
        cursor: pointer;
        display: block;
        height: 400px;
        overflow: hidden;
        opacity: 0;
        position: relative;
        transition: transform 1s ease 2.5s;
        width: 400px;
    }

    .glass-lc {
        margin-top: 120px;
        transform: translate(400px, -200px) scale(.5)
    }

    .glass-cc {
        margin-top: 60px;
        transform: translate(60px, -200px) scale(.5)
    }

    .glass-rc {
        transform: translate(-400px, -200px) scale(.5)
    }

    .loaded .glass-lc {
        animation: enter-l .4s ease-out 1.7s forwards;
    }

    .loaded .glass-cc {
        animation: enter-c .4s ease-out 1.9s forwards;
    }

    .loaded .glass-rc {
        animation: enter-r .4s ease-out 2.1s forwards;
    }

    @@keyframes enter-l {
        0% {
            transform: translate(400px, -200px) scale(.5);
            opacity: 0;
        }

        10% {
            transform: translate(398px, -180px) scale(.5)
        }

        20% {
            transform: translate(392px, -160px) scale(.5)
        }

        30% {
            transform: translate(381px, -140px) scale(.5)
        }

        40% {
            transform: translate(367px, -120px) scale(.6)
        }

        50% {
            transform: translate(346px, -100px) scale(.7);
            opacity: 1;
        }

        60% {
            transform: translate(322px, -80px) scale(.8)
        }

        70% {
            transform: translate(285px, -60px) scale(.9)
        }

        80% {
            transform: translate(242px, -40px) scale(1)
        }

        90% {
            transform: translate(176px, -20px) scale(1)
        }

        95% {
            transform: translate(124px, -10px) scale(1)
        }

        100% {
            transform: translate(0, 0) scale(1);
            opacity: 1;
        }
    }

    @@keyframes enter-c {
        0% {
            transform: translate(60px, -200px) scale(.5);
            opacity: 0;
        }

        10% {
            transform: translate(59px, -180px) scale(.5)
        }

        20% {
            transform: translate(58px, -160px) scale(.5)
        }

        30% {
            transform: translate(57px, -140px) scale(.5)
        }

        40% {
            transform: translate(55px, -120px) scale(.6)
        }

        50% {
            transform: translate(51px, -100px) scale(.7);
            opacity: 1;
        }

        60% {
            transform: translate(47px, -80px) scale(.8)
        }

        70% {
            transform: translate(42px, -60px) scale(.9)
        }

        80% {
            transform: translate(35px, -40px) scale(1)
        }

        90% {
            transform: translate(26px, -20px) scale(1)
        }

        95% {
            transform: translate(18px, -10px) scale(1)
        }

        100% {
            transform: translate(0, 0) scale(1);
            opacity: 1;
        }
    }

    @@keyframes enter-r {
        0% {
            transform: translate(-400px, -200px) scale(.5);
            opacity: 0;
        }

        10% {
            transform: translate(-398px, -180px) scale(.5)
        }

        20% {
            transform: translate(-392px, -160px) scale(.5)
        }

        30% {
            transform: translate(-381px, -140px) scale(.5)
        }

        40% {
            transform: translate(-367px, -120px) scale(.6)
        }

        50% {
            transform: translate(-346px, -100px) scale(.7);
            opacity: 1;
        }

        60% {
            transform: translate(-322px, -80px) scale(.8)
        }

        70% {
            transform: translate(-285px, -60px) scale(.9)
        }

        80% {
            transform: translate(-242px, -40px) scale(1)
        }

        90% {
            transform: translate(-176px, -20px) scale(1)
        }

        95% {
            transform: translate(-124px, -10px) scale(1)
        }

        100% {
            transform: translate(0, 0) scale(1);
            opacity: 1;
        }
    }

    .gl-in {
        position: absolute;
        width: 400px;
        height: 4000px;
        bottom: 0;
        left: 0;
        transition: background .3s;
    }

    .glass:hover .gl-in {
        background-color: rgba(255, 255, 255, .2)
    }

    .glass img {
        display: block
    }

    .active .glasses {
        animation: shake 0.5s cubic-bezier(.36, .07, .19, .97) both;
        transform: translate3d(0, 0, 0);
        backface-visibility: hidden;
        perspective: 1000px;
    }

    .active .glass-lc .glass-l {
        animation: spin 2.4s ease-in-out .1s 1
    }

    .active .glass-cc .glass-c {
        animation: spin 2.3s ease-in-out .25s 1
    }

    .active .glass-rc .glass-r {
        animation: spin 2.2s ease-in-out .6s 1
    }

    .active .glass:not(.selected) {
        /*top:500px*/
    }

    .active .glass {
        pointer-events: none;
        transform: translate(0, 0) scale(1);
        position: relative;
    }

    .active .selected.glass:before {
        display: block;
        content: " ";
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        height: 100%;
        width: 100%;
        animation: hilite .5s ease infinite;
    }

    .active.fetched .selected.glass:before {
        animation: none;
        background-color: rgba(255, 255, 255, .3);
    }

    @@keyframes hilite {
        0% {
            background-color: rgba(255, 255, 255, .3);
        }

        50% {
            background-color: rgba(255, 255, 255, .4);
        }

        100% {
            background-color: rgba(255, 255, 255, .3);
        }
    }

    .loaded .glass-lc img {
        animation: flash-wait 2s ease-out 2.4s infinite
    }

    .loaded .glass-cc img {
        animation: flash-wait 2.2s ease-out 2.6s infinite
    }

    .loaded .glass-rc img {
        animation: flash-wait 2.4s ease-out 2.8s infinite
    }

    .active .selected.glass img {
        animation: flash-out .3s ease-out 0s forwards
    }

    /*.active .selected.glass img { animation: flash .4s linear 2.4s alternate infinite }*/
    .glass img {
        transition: opacity 1s ease 2.4s, filter .3s
    }

    .active .glass:not(.selected) img {
        opacity: 0
    }

    .active.fetched .selected.glass img {
        filter: brightness(1) contrast(1);
        opacity: 1;
    }

    @@keyframes flash-out {
        0% {
            filter: brightness(1.25) contrast(.75)
        }

        100% {
            filter: brightness(1) contrast(1)
        }
    }

    @@keyframes flash-wait {
        0% {
            filter: brightness(1) contrast(1)
        }

        50% {
            filter: brightness(1) contrast(1)
        }

        75% {
            filter: brightness(1.42) contrast(.80)
        }

        100% {
            filter: brightness(1) contrast(1)
        }
    }

    @@keyframes spin {
        0% {
            bottom: 0px
        }

        30% {
            filter: blur(2px)
        }

        50% {
            filter: blur(3px)
        }

        70% {
            filter: blur(2px)
        }

        100% {
            bottom: -3600px
        }
    }

    @@keyframes shake {

        10%,
        90% {
            transform: translate3d(-4px, 0, 0);
        }

        20%,
        80% {
            transform: translate3d(8px, 0, 0);
        }

        30%,
        50%,
        70% {
            transform: translate3d(-16px, 0, 0);
        }

        40%,
        60% {
            transform: translate3d(16px, 0, 0);
        }
    }

    .win-msg {
        background-color: rgba(10, 25, 47, .9);
        bottom: 0;
        height: 100%;
        left: 0;
        opacity: 0;
        padding-top: 180px;
        position: absolute;
        right: 0;
        text-align: center;
        top: 0;
        transition: all 1s;
        visibility: hidden;
        width: 100%;
        z-index: 6;
    }

    .fetched .win-msg {
        opacity: 1;
        visibility: visible;
    }

    @@keyframes flash-title {
        100% {
            color: #40a6ff
        }
    }

    .win-msg .title {
        animation: flash-title .25s linear alternate-reverse infinite;
        color: #0088ff;
        display: none;
        font-size: 80px;
        font-weight: bold;
        line-height: 1.25;
        max-width: 800px;
        margin: 0 auto 20px;
        opacity: 0;
        transition: all .3s ease .4s;
        transform: translateY(-50px) scale(.5);
    }

    .win-msg .img {
        display: none;
        filter: brightness(0) invert(1);
        margin: 0 auto 0;
        max-height: 200px;
        opacity: 0;
        transition: all .3s ease .5s;
        transform: translateY(-50px) scale(.5);
        width: auto;
    }

    .win-msg .text {
        color: #fff;
        font-size: 44px;
        line-height: 1.15;
        max-width: 800px;
        margin: 20px auto 0;
        opacity: 0;
        transition: all .3s ease .6s;
        transform: translateY(-50px) scale(.5);
    }

    .win-msg .button {
        background-color: #ffdd00;
        border-bottom: 4px solid #ebcc00;
        border-radius: 160px;
        color: #002248;
        display: inline-block;
        font-size: 48px;
        font-weight: bold;
        margin: 30px auto 0;
        opacity: 0;
        padding: 20px 80px;
        transition: all .3s ease .7s;
        transform: translateY(-50px) scale(.5);
    }

    .fetched .win-msg .title,
    .fetched .win-msg .img,
    .fetched .win-msg .text,
    .fetched .win-msg .button {
        opacity: 1;
        transform: translateY(0) scale(1);
        filter: brightness(1) contrast(1) invert(0);
    }

    .win-msg .link {
        cursor: pointer;
        display: block;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 9;
    }

    .win-msg.win .title,
    .win-msg.win .img {
        display: block
    }

    .win-msg.lost .title {
        animation: none;
        color: #888;
        display: block;
    }

    .win-msg.login,
    .win-msg.expired {
        padding-top: 240px
    }


    /* Bird */
    .bird {
        opacity: 0;
        transition: opacity 1s linear 2s;
    }

    .loaded .bird {
        background-image: url(@(imgUrl)/bat.png?cb=2);
        background-size: auto 100%;
        width: 176px;
        height: 250px;
        will-change: background-position;
        animation-name: fly-cycle;
        animation-timing-function: steps(10);
        animation-iteration-count: infinite;
        opacity: 1;
    }

    .bird--one {
        animation-duration: 1s;
        animation-delay: -0.5s;
    }

    .bird--two {
        animation-duration: 0.9s;
        animation-delay: -0.75s;
    }

    .bird--three {
        animation-duration: 1.25s;
        animation-delay: -0.25s;
    }

    .bird--four {
        animation-duration: 1.1s;
        animation-delay: -0.5s;
    }

    .bird-container {
        position: absolute;
        top: 4%;
        left: -10%;
        transform: scale(0) translateX(-10vw);
        will-change: transform;
        animation-name: fly-right-one;
        animation-timing-function: linear;
        animation-iteration-count: infinite;
        z-index: 2;
    }

    .bird-container--one {
        animation-duration: 15s;
        animation-delay: 0s;
    }

    .bird-container--two {
        animation-duration: 16s;
        animation-delay: 1s;
    }

    .bird-container--three {
        animation-duration: 14.6s;
        animation-delay: 9.5s;
    }

    .bird-container--four {
        animation-duration: 16s;
        animation-delay: 10.25s;
    }

    @@keyframes fly-cycle {
        100% {
            background-position: -1800px 0;
        }
    }

    @@keyframes fly-right-one {
        0% {
            transform: scale(0.3) translateX(-10vw);
        }

        10% {
            transform: translateY(2vh) translateX(10vw) scale(0.4);
        }

        20% {
            transform: translateY(0vh) translateX(30vw) scale(0.5);
        }

        30% {
            transform: translateY(4vh) translateX(50vw) scale(0.6);
        }

        40% {
            transform: translateY(2vh) translateX(70vw) scale(0.6);
        }

        50% {
            transform: translateY(0vh) translateX(90vw) scale(0.6);
        }

        60% {
            transform: translateY(0vh) translateX(110vw) scale(0.6);
        }

        100% {
            transform: translateY(0vh) translateX(110vw) scale(0.6);
        }
    }

    @@keyframes fly-right-two {
        0% {
            transform: translateY(-2vh) translateX(-10vw) scale(0.5);
        }

        10% {
            transform: translateY(0vh) translateX(10vw) scale(0.4);
        }

        20% {
            transform: translateY(-4vh) translateX(30vw) scale(0.6);
        }

        30% {
            transform: translateY(1vh) translateX(50vw) scale(0.45);
        }

        40% {
            transform: translateY(-2.5vh) translateX(70vw) scale(0.5);
        }

        50% {
            transform: translateY(0vh) translateX(90vw) scale(0.45);
        }

        51% {
            transform: translateY(0vh) translateX(110vw) scale(0.45);
        }

        100% {
            transform: translateY(0vh) translateX(110vw) scale(0.45);
        }
    }

    @@keyframes spin-sm {
        0% {
            bottom: 0px
        }

        30% {
            filter: blur(2px)
        }

        50% {
            filter: blur(3px)
        }

        70% {
            filter: blur(2px)
        }

        100% {
            bottom: -2160px
        }
    }

    @@media (min-width:769px) and (max-width:979px) {

        .active .glass-lc .glass-l {
            animation: spin-sm 2.4s ease-in-out .1s 1
        }

        .active .glass-cc .glass-c {
            animation: spin-sm 2.3s ease-in-out .25s 1
        }

        .active .glass-rc .glass-r {
            animation: spin-sm 2.2s ease-in-out .6s 1
        }

        .glasses {
            margin-top: 280px;
            max-width: 90%;
        }

        .glass,
        .glass img {
            height: 240px;
            width: 240px;
        }

        .gl-in {
            height: 2400px;
            width: 240px;
        }
    }


    @@keyframes spin-md {
        0% {
            bottom: 0px
        }

        30% {
            filter: blur(2px)
        }

        50% {
            filter: blur(3px)
        }

        70% {
            filter: blur(2px)
        }

        100% {
            bottom: -2700px
        }
    }

    @@media (min-width:980px) and (max-width:1217px) {
        .active .glass-lc .glass-l {
            animation: spin-md 2.4s ease-in-out .1s 1
        }

        .active .glass-cc .glass-c {
            animation: spin-md 2.3s ease-in-out .25s 1
        }

        .active .glass-rc .glass-r {
            animation: spin-md 2.2s ease-in-out .6s 1
        }

        .glasses {
            margin-top: 250px;
            max-width: 90%;
        }

        .glass,
        .glass img {
            height: 300px;
            width: 300px;
        }

        .gl-in {
            height: 3000px;
            width: 300px;
        }
    }

    @@media (max-width:768px) {
        .play {
            height: 300px;
        }

        .bg {
            height: 300px;
            margin-top: 0;
            max-width: none;
            width: auto;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .betshop {
            margin-left: -40px;
            top: 20px;
            width: 90px;
        }

        .logo {
            margin-left: -140px;
            top: 130px;
            width: 280px;
        }

        .loaded .logo {
            top: 45px
        }

        .loaded .bird {
            /*background-size: auto 125px;*/
            height: 125px;
            width: 88px;
        }

        .bird-container--one {
            animation-duration: 7.5s;
        }

        .bird-container--two {
            animation-duration: 8s;
        }

        .bird-container--three {
            animation-duration: 7.3s;
        }

        .bird-container--four {
            animation-duration: 8s;
        }

        .g-sm {
            height: 320px;
            position: absolute;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%) scale(.29);
            width: 329vw;
        }

        .glasses {
            margin-top: 0;
            min-width: 1150px;
        }

        .win-msg {
            padding-top: 80px
        }

        .win-msg .title {
            font-size: 32px;
            margin-bottom: 10px;
        }

        .win-msg .img {
            height: 60px;
            margin-bottom: 10px;
        }

        .win-msg .text {
            font-size: 16px;
            margin-top: 5px;
            max-width: 320px;
        }

        .win-msg .button {
            font-size: 20px;
            margin-top: 10px;
            padding: 5px 40px;
        }

        .win-msg.login,
        .win-msg.expired {
            padding-top: 120px
        }
    }

    @@media (max-width:362px) {
        .g-sm {
            width: 345vw
        }
    }
</style>
