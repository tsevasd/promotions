<div class="mx-auto max-w-screen-lg px-3 md:px-6 lg:px-10 py-6">
    <h4 class="text-2xl md:text-4xl font-semibold text-brand-300 mb-2 md:mb-4">Promotions</h4>
    <div class="grid grid-cols-1 xs:grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3 md:gap-2 mb-4">
        @foreach (var promotion in Promotions)
        {
            <a class="block relative bg-white overflow-hidden rounded-md cursor-pointer transition hover:opacity-90 teaser after:pt-[56.25%] after:table group"
                href="@promotion.Url"
                title="@promotion.Title">
                <img class="absolute w-full h-full object-fill transition group-hover:scale-105" loading="lazy"
                    src="@promotion.ImageUrl"
                    alt="@promotion.Title - @promotion.Description">
                <div class="absolute bottom-4 left-5 w-1/2 select-none text-white">
                    <div class="text-xl sm:text-4xl font-semibold">@promotion.Title</div>
                    <div class="text-base sm:text-xl font-normal text-slate-300">@promotion.Description</div>
                </div>
            </a>
        }
    </div>
</div>